generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

enum Role {
  USER
  ADMIN
}

enum Genre {
  VALLÁSI_IRAT
  EPOSZ
  REGÉNY
  TRAGÉDIA
  VÍGJÁTÉK
}

enum LiteraryForm {
  EPIKA
  DRÁMA
  LIRIKA
}

model User {
  id           Int       @id @default(autoincrement())
  username     String    @unique
  email        String    @unique
  passwordHash String
  role         Role      @default(USER)
  ratings      Rating[]
  comments     Comment[]
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt
}

model Book {
  id              Int             @id @default(autoincrement())
  sequenceNumber  Int             @unique
  title           String
  author          String
  coverUrl        String?
  commentId       Int?            @unique
  rating          Int?
  genre           Genre
  literaryForm    LiteraryForm
  lyricNote       String?         @db.Text
  ratings         Rating[]
  comments        Comment[]
    
  createdAt       DateTime        @default(now())
  updatedAt       DateTime        @updatedAt
  pageCount       Int
}

model Rating {
  id        Int      @id @default(autoincrement())
  rating    Int      // 1-5 csillag
  userId    Int
  bookId    Int
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  book      Book     @relation(fields: [bookId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([userId, bookId]) // Egy user csak egyszer értékelhet egy könyvet
}

model Comment {
  id        Int      @id @default(autoincrement())
  content   String   @db.Text
  userId    Int
  bookId    Int
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  book      Book     @relation(fields: [bookId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
